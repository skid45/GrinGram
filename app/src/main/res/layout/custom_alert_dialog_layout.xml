<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/delete_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_message"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5.Bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/delete_message_alert_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/are_you_sure_you_want_to_delete_this_message"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/delete_message_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

</LinearLayout>