<resources>
    <!-- Base application theme. -->
    <style name="Theme.GrinGram" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>

        <!-- View Styles. -->
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="materialCardViewStyle">@style/MaterialCardStyle</item>
        <item name="materialDividerStyle">@style/MaterialDividerStyle</item>

        <!-- Text appearance. -->
        <item name="textAppearanceHeadline4">
            @style/TextAppearance.MaterialComponents.Headline4.PrimaryColor
        </item>

    </style>
</resources>