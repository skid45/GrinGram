<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="ButtonStyle.SendMessageButton">
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circle_image_button</item>
    </style>

    <style name="ImageButton.SendMessageButton">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="MaterialCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/colorSurface</item>
        <item name="android:elevation">5dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="MaterialCardStyle.NewMessageIndicator">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="Message" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/colorSurface</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="MaterialDividerStyle" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="dividerColor">@color/colorOnSurfaceVariant</item>
    </style>

    <style name="MaterialToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_background</item>
    </style>

    <style name="FullscreenDialogStyle" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="TextAppearance.MaterialComponents.Headline4.PrimaryColor">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline5.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline7" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline7.PrimaryColor">
        <item name="android:textColor">@drawable/text_color_selector_primary_color</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline7.SansSerif">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline7.SansSerif.PrimaryColor">
        <item name="android:textColor">@drawable/text_color_selector_primary_color</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline7.SansSerif.RedColor">
        <item name="android:textColor">@drawable/text_color_selector_red_color</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline7.RedColor">
        <item name="android:textColor">@drawable/text_color_selector_red_color</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.PrimaryColor">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Caption.RedColor">
        <item name="android:textColor">@color/colorError</item>
    </style>


</resources>